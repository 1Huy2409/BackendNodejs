extends ../../layouts/default.pug 
include ../../mixins/box-head.pug
block main  
    .container.my-3 
        include ../../partials/list-btn-user.pug
        .row
            .col-12 
                +box-head("Danh sách người dùng")
        .row(data-not-user-accept = user.id)
            each user in users
                .col-6(user-id = user.id)
                    div(class = "box-user")
                        div(class = "inner-avatar")
                            img(    
                                src = (user.avatar ? user.avatar : "https://png.pngtree.com/element_our/20200610/ourmid/pngtree-default-avatar-image_2237213.jpg")
                                alt = user.fullName
                            )
                        div(class = "inner-info")
                            div(class = "inner-name") #{user.fullName} 
                            div(class = "inner-buttons")
                                button(
                                    class = "btn btn-sm btn-primary mr-1"
                                    btn-add-friend = user.id
                                ) Kết bạn
                                button(
                                    class = "btn btn-sm btn-secondary mr-1"
                                    btn-cancel-friend = user.id
                                ) Hủy
    
block script 
    script(src = "/js/users.js")