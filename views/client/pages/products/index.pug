extends ../../layouts/default.pug
//- extends dùng để kế thừa lại layout defautl
//- nhugn mixin vao
include ../../mixins/box-head.pug   
//- include dùng để nhúng vào 
block main
    .container.my-3 
        .row
            .col-12 
                +box-head("Danh sách sản phẩm")
        .row 
            each item in product 
                .col-4.mb-3 
                .product-item 
                    .inner-item 
                        img(
                            src = item.thumbnail
                        )
                    .inner-content 
                        h3.inner-title
                            a(href = `/products/detail/${item.slug}`) #{item.title}                 
                        .inner-price-new #{Math.round(item.price - item.price*(item.discountPercentage/100))}$
                        .inner-price-old #{item.price}$
                        .inner-discount #{item.discountPercentage}%