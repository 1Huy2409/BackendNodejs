extend ../../layouts/default.pug
include ../../mixins/alert.pug
block main 
    if (roles.permission.includes("product_create"))
        h1(class = "mb-4") Thêm mới nhóm quyền 

        form(
            action = `${prefixAdmin}/roles/create?_method=POST`
            method = "POST"
        )
            div(class = "form-group")
                label(for = "title") Tiêu đề
                input(
                    type = "text"
                    class = "form-control"
                    id = "title"
                    name = "title"
                    required
                )
            div(class = "form-group")
                label(for = "desc") Mô tả
                input(
                    type = "text"
                    class = "form-control"
                    id = "desc"
                    name = "description"
                )
            div(class = "form-group")
                button(
                    type = "submit"
                    class = "btn btn-primary"
                ) Tạo mới
        script(src = "/admin/js/product.js")
        
